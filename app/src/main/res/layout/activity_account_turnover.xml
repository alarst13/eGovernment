<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_background"
    tools:context=".AccountTurnover.AccountTurnover">

    <LinearLayout
        android:id="@+id/layout_account_turnover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="#ffb2b2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/txt_selector"
            android:gravity="center"
            android:text="Card Num"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/txt_selector"
            android:gravity="center"
            android:text="Date"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/txt_selector"
            android:gravity="center"
            android:text="Type"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/txt_selector"
            android:gravity="center"
            android:text="Amount"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/txt_selector"
            android:gravity="center"
            android:text="Balance"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/account_turnover_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_account_turnover"></ListView>

</RelativeLayout>