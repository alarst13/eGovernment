<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizOfKings.QuizOfKingsActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/quiz_of_kings_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="your point"/>
    <TextView
        android:id="@+id/quiz_of_kings_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question"/>
    <Button
        android:id="@+id/quiz_of_kings_one"
        android:tag="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1)"
        android:onClick="answer"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/quiz_of_kings_two"
        android:tag="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2)"
        android:onClick="answer"
        tools:ignore="OnClick"/>
    <Button
        android:id="@+id/quiz_of_kings_three"
        android:tag="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3)"
        android:onClick="answer"
        tools:ignore="OnClick"/>
    <Button
        android:id="@+id/quiz_of_kings_four"
        android:tag="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4)"
        android:onClick="answer"
        tools:ignore="OnClick"/>
</LinearLayout>