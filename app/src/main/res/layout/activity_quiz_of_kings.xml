<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_background"
    tools:context=".QuizOfKings.QuizOfKingsActivity">


    <TextView
        android:id="@+id/quiz_of_kings_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:fontFamily="casual"
        android:gravity="left"
        android:text="Question"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/quiz_of_kings_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:onClick="answer"
            android:tag="1"
            android:text="1)"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/quiz_of_kings_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:onClick="answer"
            android:tag="2"
            android:text="2)"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/quiz_of_kings_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:onClick="answer"
            android:tag="3"
            android:text="3)"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/quiz_of_kings_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:onClick="answer"
            android:tag="4"
            android:text="4)"
            android:textStyle="bold"
            tools:ignore="OnClick" />
    </LinearLayout>
</RelativeLayout>
