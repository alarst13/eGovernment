<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AccountTurnover.AccountAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <TextView
            android:id="@+id/card_number_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="9115823029"
            android:textSize="12sp"
            android:background="@drawable/txt1_selector"/>

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12sp"
            android:text="04/05/2010"
            android:background="@drawable/txt1_selector"/>

        <TextView
            android:id="@+id/type_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="withdrawal"
            android:textSize="12sp"
            android:background="@drawable/txt1_selector"/>

        <TextView
            android:id="@+id/amount_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="9000000"
            android:textSize="12sp"
            android:background="@drawable/txt1_selector"/>

        <TextView
            android:id="@+id/bank_balance_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="9000000"
            android:textSize="12sp"
            android:background="@drawable/txt1_selector"/>
    </LinearLayout>

</RelativeLayout>