<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardToCard.GoToTheMainPageActivity"
    android:background="@drawable/pink_background">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/all_done_txt"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="It's all done\n go to the main page ..."/>
        <Button
            android:id="@+id/go_to_main_page_btn"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/all_done_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's go"
            android:background="@drawable/first_selector"/>
    </RelativeLayout>
</RelativeLayout>