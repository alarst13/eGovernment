<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/pink_background">

    <LinearLayout
        android:id="@+id/phone_number_txt1_second_activity"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:weightSum="5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is this phone number correct?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/phone_number_txt2_second_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/phone_number_txt3_second_activity"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If not please click here"
            android:textStyle="bold"
            android:textColor="#4286f4"
            android:textSize="15sp"
            android:fontFamily="cursive"
            android:layout_marginBottom="25dp"/>
        <EditText
            android:id="@+id/verification_code_edt_second_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the code"
            android:inputType="number"
            android:textSize="15sp"
            android:layout_marginBottom="25dp"/>
        <Button
            android:id="@+id/verification_code_btn_second_activity"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:background="@drawable/first_selector"
            android:text="sign in"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="cursive"/>
    </LinearLayout>

</RelativeLayout>